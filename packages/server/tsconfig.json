    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "rootDir": "./",
    "outDir": "./build",
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["./node_modules/@types", "./typings"]
  }
}
